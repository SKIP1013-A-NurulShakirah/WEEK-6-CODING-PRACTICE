//Question : Calculate are of circle when radius is greater than 0 and display the area. If not, display "Invalid radius".


package self_programming;

import java.util.Scanner;

public class Example9 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		
		double r, area;
		
		System.out.print("Enter radius : ");
		r = sc.nextDouble();
		
		if (r > 0)
		{
			area = 3.412 * r * r;
			System.out.print("\nThe area is " +area);
		}
		else
			System.out.print("\nInvalid radius");

	
	}
}
